<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="text-center">Sign up</h1>
     
      <div class="well">
        
        <% if params[:plan] == '2'%>
          <h2 class="text-center">Pro Account Sign Up Form</h2>
          <%= render "pro_form" %>
        <% else %>
          <h2 class= "text-center">Basic Account Sign Up Form</h2>
          <%= render "basic_form" %>
        <% end %>  
      
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>